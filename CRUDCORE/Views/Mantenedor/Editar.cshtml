@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer verRecurso;
@model ContactoModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="masthead" id="masthead">
<div class="container-fluid px-4 px-lg-5 d-flex h-100 align-items-center">
    <div class="card-header text-white">
            Editar Contacto
    </div>
    <div class="card-body">
        <!--Formulario para actualizar los datos ya recuperados-->
        <form asp-action="Editar" asp-controller="Mantenedor" method="post">
            
                <input asp-for="IdContacto" type="hidden" class="form-control">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Telefono</label>
                <input asp-for="Telefono" type="text" class="form-control">
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="Correo" type="text" class="form-control">
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Direccion</label>
                <input asp-for="Direccion" type="text" class="form-control">
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Creacion</label>
                <input asp-for="FechaCreacion" type="date" class="form-control">
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la Lista</a>
        </form>
    </div>
</div>
</header>

